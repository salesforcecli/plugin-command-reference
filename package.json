{
  "name": "@salesforce/plugin-command-reference",
  "description": "Generate the Salesforce CLI command reference guide",
  "version": "1.3.16",
  "author": "Thomas @amphro",
  "bugs": "https://github.com/forcedotcom/plugin-command-reference/issues",
  "dependencies": {
    "@oclif/command": "^1.8.3",
    "@oclif/config": "^1.17.1",
    "@oclif/errors": "^1.3.5",
    "@salesforce/command": "^4.1.5",
    "@salesforce/core": "^2.29.0",
    "chalk": "^3.0.0",
    "handlebars": "^4.7.3",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/plugin-help": "^3.2.5",
    "@oclif/test": "^1.2.8",
    "@salesforce/dev-config": "^2.1.2",
    "@salesforce/dev-scripts": "^0.9.18",
    "@salesforce/prettier-config": "^0.0.1",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jsforce": "^1.9.35",
    "husky": "^4.2.3",
    "salesforcedx": "48.4.1",
    "semantic-release": "^17.0.4",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=8.4.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/templates"
  ],
  "homepage": "https://github.com/forcedotcom/plugin-command-reference",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "topics": {
      "commandreference": {
        "description": "generate the Salesforce CLI command reference guide.",
        "longDescription": "xx"
      }
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "salesforcedx"
    ]
  },
  "repository": "forcedotcom/plugin-command-reference",
  "scripts": {
    "build": "sf-build",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "#no linter",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint && yarn test:deprecation-policy && yarn test:command-reference",
    "prepack": "sf-prepack",
    "prepare": "sf-install",
    "pretest": "sf-compile-test",
    "test": "sf-test",
    "version": "oclif-dev readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "sf-husky-pre-commit",
      "commit-msg": "sf-husky-commit-msg",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
